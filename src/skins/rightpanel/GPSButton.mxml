<!--- The default skin class for the Spark Button component.  

       @see spark.components.Button
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
             xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
             minWidth="21" minHeight="21" 
             alpha.disabled="0.5">
     
    <fx:Metadata>
        <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.Button")]
        ]]>
    </fx:Metadata>

	<!-- states -->
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>
	
	<s:VGroup width="100%" height="100%" gap="0" horizontalAlign="center">
		<s:Image left="0" width="24" height="24" source="images/details/greenGPS_24.png" horizontalAlign="center"/>
		<s:Spacer height="5"/>
		<s:Label id="labelDisplay" color="0xFFFFFF" fontFamily="黑体" horizontalCenter="0"
				 maxDisplayedLines="1" textAlign="center" verticalAlign="middle" verticalCenter="1">
		</s:Label>
		<s:filters>
			<s:GlowFilter alpha="0" blurX="20" blurY="20" color="0xb6ed4c"
						  alpha.over="1.0"/>
		</s:filters>
	</s:VGroup>
   
    
</s:SparkButtonSkin>
